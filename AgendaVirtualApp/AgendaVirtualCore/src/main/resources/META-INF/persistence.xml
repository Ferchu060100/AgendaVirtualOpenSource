<?xml version="1.0"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

	<persistence-unit name="AgendaVirtualMySqlDS" transaction-type="JTA">
		<jta-data-source>java:/AgendaVirtualMySqlDS</jta-data-source>
		<class>pe.agendavirtual.entity.TipoDocumento</class>
		<class>pe.agendavirtual.entity.Alumno</class>
		<class>pe.agendavirtual.entity.Apoderado</class>
		<class>pe.agendavirtual.entity.Curso</class>
		<class>pe.agendavirtual.entity.Dia</class>
		<class>pe.agendavirtual.entity.Evaluacion</class>
		<class>pe.agendavirtual.entity.GradoEducativo</class>
		<class>pe.agendavirtual.entity.HorarioAlumno</class>
		<class>pe.agendavirtual.entity.NivelEducativo</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
	</persistence-unit>
</persistence>